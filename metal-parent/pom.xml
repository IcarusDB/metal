    <parent>
        <groupId>org.metal</groupId>
        <artifactId>metal-main</artifactId>
        <version>${revision}</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>metal-parent</artifactId>
    <packaging>pom</packaging>
    <name>Metal Parent</name>

    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>11</maven.compiler.source>
        <maven.compiler.target>11</maven.compiler.target>
        <junit.version>4.13.2</junit.version>
        <guava.version>31.1-jre</guava.version>
        <jackson.version>2.13.3</jackson.version>
        <commons-lang3.version>3.12.0</commons-lang3.version>
        <commons-cli.version>1.5.0</commons-cli.version>
        <immutables.version>2.9.0</immutables.version>
        <arrow-vector.version>7.0.0</arrow-vector.version>
        <spark.version>3.3.0</spark.version>
        <scala.version>2.12</scala.version>
        <vertx.version>4.3.3</vertx.version>
        <netty.version>4.1.78.Final</netty.version>
        <log4j.version>1.2.17</log4j.version>
        <slf4j.version>1.7.32</slf4j.version>
        <reflections.version>0.10.2</reflections.version>
        <maven-compiler-plugin.version>3.10.1</maven-compiler-plugin.version>
        <maven-clean-plugin.version>3.2.0</maven-clean-plugin.version>
